<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn22"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn22"
        android:layout_centerHorizontal="true"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn22"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn22"
        android:layout_marginRight="7dp"
        android:layout_toLeftOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn22"
        android:layout_centerHorizontal="true"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btn33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn22"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@id/btn22"
        android:textColor="#B5FA25" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="151dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Reiniciar"
        android:textColor="#B5FA25"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtJogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="135dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Jogador: X"
        android:textAlignment="center"
        android:textColor="#FA7157"
        android:textSize="42sp"
        android:textStyle="bold" />
</RelativeLayout>